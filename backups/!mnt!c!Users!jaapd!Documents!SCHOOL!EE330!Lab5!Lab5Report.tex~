\hline
187 & 9.0k & 4.3k & 80\\
\end{tabular}
\end{center}
\subsection{Stabilized common emitter}
\label{sec:org676e7a7}
\begin{center}
\begin{tabular}{rllrr}
A\(_{\text{V}}\) & R\(_{\text{in}}\) & R\(_{\text{out}}\) & A\(_{\text{V}}\) at -51 C & A\(_{\text{V}}\) at 125 C\\
\hline
169 & 4.1k & 2.3k & 175 & 150\\
\end{tabular}
\end{center}
\subsection{Stabilized common emitter with degeneration}
\label{sec:orgab62331}
\begin{center}
\begin{tabular}{rllrr}
